                <argument>-XX:MaxPermSize=192m</argument>
                <argument>-classpath</argument>
                <classpath/>
                <argument>groovy.ui.Console</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
